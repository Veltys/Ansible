		ServerAdmin webmaster@veltys.es
		DocumentRoot /var/www/vhosts/{{ item.site }}/httpdocs

		ErrorLog ${APACHE_LOG_DIR}/error-nike.log
		CustomLog ${APACHE_LOG_DIR}/access-nike.log combined

		SSLEngine on
